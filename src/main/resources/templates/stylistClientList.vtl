<!--stylistclientist.vtl-->
<h1>$stylist.getName()</h1>
<br>
#if ($clients.size() > 0)
  <h4>Existing Clients:</h4>
  <ul>
    #foreach ($client in $clients)
      <li>$client.getName()</li>
    #end
  </ul>
#else
  <p>This stylist has no clients! They must give terrible cuts... or was just hired.</p>
#end

<br>
<form action="/client-added-success" method="post">
  <input id="stylistId" name="stylistId" type="hidden" value="$stylist.getId()">

  <div class="form-group">
    <label for="name">New Client Name</label>
    <input id="name" name="name" type="text" class="form-control">

<!--    <label for="clientDescription">Enter Client Email</label>
    <input id="clientDescription" name="clientDescription" type="text" class="form-control">
-->
  </div>

  <button type="submit" class="btn btn-success">Add This Client</button>
</form>
<!--stylistclientist.vtl-->
